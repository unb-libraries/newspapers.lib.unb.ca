{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @ingroup templates
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
  {{ q }}
{% endif %}

{# Hack to show exposed filters after ajax submission #}
{% set values = form["date"]["#value"]~form["vol"]["#value"]~form["issue"]["#value"] %}
<div class="toggle-wrapper input-group">
  <label for="toggle-widget" class="checkbox-toggle">
    <input id="toggle-widget" type="checkbox" {% if values|length %}checked{% endif %}/>
      {% trans %}Show Filter Options{% endtrans %}
  </label>
</div>
<div class="filters form--inline form-inline clearfix">
    {{ form }}
</div>
